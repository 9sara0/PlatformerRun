<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team.platformerrun.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Well Done!"
        android:id="@+id/congratulate"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You collected 0 coins!"
        android:id="@+id/coinsCollected"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/congratulate"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start_again"
        android:layout_below="@+id/coinsCollected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:onClick="startGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/returnHome"
        android:layout_below="@+id/start_again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="returnHome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="High Score: 0"
        android:id="@+id/highScore"
        android:layout_alignEnd="@+id/coinsCollected"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/start_again"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
