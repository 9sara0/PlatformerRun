<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team.platformerrun.ResultActivity"
    android:background="@drawable/game_over_edit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/coinsCollected"
        android:layout_above="@+id/start_again"
        android:layout_alignEnd="@+id/start_again"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="108dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:id="@+id/duration"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/start_again"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/start_again"
        android:onClick="startGame"
        android:background="@drawable/start_game"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/returnHome"
        android:layout_alignStart="@+id/returnHome"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/returnHome"
        android:onClick="returnHome"
        android:background="@drawable/main_menu_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="2dp"
        android:id="@+id/highScore"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/start_again"
        android:layout_marginStart="37dp" />
</RelativeLayout>
